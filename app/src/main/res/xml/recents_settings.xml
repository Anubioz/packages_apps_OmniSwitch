<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/recents_settings_title">

    <SwitchPreference
        android:defaultValue="false"
        android:key="enable"
        android:title="@string/enable_title" />

    <org.omnirom.omnilib.preference.SystemSettingSwitchPreference
        android:key="split_screen_external"
        android:title="@string/split_screen_external_title"
        android:summary="@string/split_screen_external_summary"
        android:defaultValue="false" />

    <PreferenceCategory
        android:key="category_icons"
        android:title="@string/category_icons_title">
        <ListPreference
            android:entries="@array/icon_size_entries"
            android:entryValues="@array/icon_size_values"
            android:key="icon_size"
            android:summary="@string/icon_size_normal"
            android:title="@string/icon_size_title" />

        <org.omnirom.omniswitch.ui.IconPackPreference
            android:key="iconpack"
            android:summary="@string/icon_pack_summary"
            android:title="@string/icon_pack_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_overlay"
        android:title="@string/category_overlay_title">
        <SwitchPreference
            android:defaultValue="true"
            android:key="animate"
            android:summary="@string/animate_title_summary"
            android:title="@string/animate_title" />

        <ListPreference
            android:entries="@array/bg_style_entries"
            android:entryValues="@array/bg_style_values"
            android:key="bg_style"
            android:defaultValue="3"
            android:summary="@string/bg_style_solid_light"
            android:title="@string/bg_style_title" />

        <org.omnirom.omnilib.preference.SeekBarPreference
            android:defaultValue="70"
            android:key="opacity"
            android:max="100"
            android:summary="@string/opacity_summary"
            android:title="@string/opacity_title" />

        <SwitchPreference
            android:key="dim_behind"
            android:summary="@string/dim_behind_summary"
            android:title="@string/dim_behind_title" />

        <SwitchPreference
            android:key="dim_action_buttons"
            android:summary="@string/dim_action_buttons_summary"
            android:title="@string/dim_action_buttons_title" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="show_rambar"
            android:summary="@string/show_rambar_summary"
            android:title="@string/show_rambar_title" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="show_labels"
            android:summary="@string/show_app_labels_summary"
            android:title="@string/show_app_labels" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="button_hide"
            android:summary="@string/button_hide_summary"
            android:title="@string/button_hide_title" />

        <Preference
            android:key="button_config"
            android:summary="@string/buttons_summary"
            android:title="@string/buttons_title" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/button_pos_entries"
            android:entryValues="@array/button_pos_values"
            android:key="button_pos"
            android:summary="@string/button_pos_top"
            android:title="@string/button_pos_title" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/layout_style_entries"
            android:entryValues="@array/layout_style_values"
            android:key="layout_style"
            android:title="@string/layout_style_title" />
        <ListPreference
            android:defaultValue="1.0"
            android:entries="@array/thumb_size_entries"
            android:entryValues="@array/thumb_size_values"
            android:key="thumb_size"
            android:title="@string/thumb_size_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="revert_recents"
            android:summary="@string/revert_recents_summary"
            android:title="@string/revert_recents_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="locked_apps_sort"
            android:summary="@string/locked_apps_sort_summary"
            android:title="@string/locked_apps_sort_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="color_task_header"
            android:summary="@string/color_task_header_summary"
            android:title="@string/color_task_header_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="bottom_favorites"
            android:summary="@string/bottom_favorites_summary"
            android:title="@string/bottom_favorites_title" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="thumb_header_position_side"
            android:summary="@string/thumb_header_position_side_summary"
            android:title="@string/thumb_header_position_side_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="app_filter_category"
        android:title="@string/app_filter_category_title">
        <ListPreference
            android:entries="@array/app_filter_time_entries"
            android:entryValues="@array/app_filter_time_values"
            android:key="app_filter_time"
            android:title="@string/app_filter_time_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="app_filter_running"
            android:title="@string/app_filter_running_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="category_drag_handle"
        android:title="@string/category_drag_handle_title">

        <Preference
            android:key="adjust_handle"
            android:summary="@string/adjust_handle_summary"
            android:title="@string/adjust_handle_title_new" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_favorite"
        android:title="@string/category_favorite_title">
        <Preference
            android:key="favorite_apps_config"
            android:summary="@string/favorite_apps_config_summary"
            android:title="@string/favorite_apps_config_title" />

        <SwitchPreference
            android:key="launch_stats"
            android:summary="@string/launch_stats_summary"
            android:title="@string/launch_stats_title" />

        <Preference
            android:dependency="launch_stats"
            android:key="launch_stats_delete"
            android:summary="@string/launch_stats_delete_summary"
            android:title="@string/launch_stats_delete_title" />

        <Preference
            android:dependency="launch_stats"
            android:key="favorite_apps_config_stat"
            android:summary="@string/favorite_apps_config_stat_summary"
            android:title="@string/favorite_apps_config_stat_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_allapps"
        android:title="@string/category_allapps_title">
        <Preference
            android:key="hidden_apps_config"
            android:summary="@string/hidden_apps_config_summary"
            android:title="@string/hidden_apps_config_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_launcher"
        android:title="@string/category_launcher_title">

        <SwitchPreference
            android:key="launcher_mode"
            android:summary="@string/launcher_mode_summary"
            android:title="@string/launcher_mode_title" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_showWeather"
            android:persistent="true"
            android:summary="@string/pref_show_weather_summary"
            android:title="@string/pref_show_weather_title" />

        <ListPreference
            android:dependency="pref_showWeather"
            android:key="pref_weatherIconPack"
            android:persistent="true"
            android:title="@string/weather_icon_pack_title" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_showEvents"
            android:persistent="true"
            android:summary="@string/pref_show_events_summary"
            android:title="@string/pref_show_events_title" />

        <SwitchPreference
            android:defaultValue="false"
            android:dependency="pref_showEvents"
            android:key="pref_allDayEvents"
            android:persistent="true"
            android:summary="@string/pref_allDayEvents_summary"
            android:title="@string/pref_allDayEvents_title" />

        <ListPreference
            android:defaultValue="@string/preferences_widget_days_default"
            android:dependency="pref_showEvents"
            android:entries="@array/preferences_widget_days_labels"
            android:entryValues="@array/preferences_widget_days_values"
            android:key="pref_showEventsPeriod"
            android:title="@string/preferences_widget_days_title" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_showToday"
            android:persistent="true"
            android:summary="@string/pref_show_today_summary"
            android:title="@string/pref_show_today_title" />
    </PreferenceCategory>
</PreferenceScreen>
